{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2020",
    "verbatimModuleSyntax": true,

    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,

    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
